{
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "files.associations": {
        "fstream": "cpp",
        "map": "cpp",
        "new": "cpp",
        "*.tcc": "cpp",
        "array": "cpp",
        "any": "cpp",
        "string_view": "cpp",
        "regex": "cpp",
        "iostream": "cpp",
        "chrono": "cpp",
        "functional": "cpp",
        "istream": "cpp",
        "memory_resource": "cpp",
        "ostream": "cpp",
        "ratio": "cpp",
        "tuple": "cpp",
        "type_traits": "cpp",
        "utility": "cpp",
        "variant": "cpp",
        "deque": "cpp",
        "forward_list": "cpp",
        "list": "cpp",
        "vector": "cpp",
        "string": "cpp",
        "*.ipp": "cpp"
    },
    // cmake options
    "cmake.configureSettings" : {
        // this optioin turns off testing for yaml-cpp library
        "YAML_CPP_BUILD_TESTS":"OFF",
        "YAML_CPP_BUILD_TOOLS":"OFF",
        "YAML_CPP_BUILD_CONTRIB":"OFF"
    },
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "src/test/python/uml",
        "-p",
        "*_test.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.unittestEnabled": true
}