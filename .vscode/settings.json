{
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "files.associations": {
        "fstream": "cpp",
        "map": "cpp",
        "new": "cpp",
        "*.tcc": "cpp",
        "array": "cpp",
        "any": "cpp",
        "string_view": "cpp",
        "regex": "cpp",
        "iostream": "cpp"
    },
    // cmake options
    "cmake.configureSettings" : {
        // this optioin turns off testing for yaml-cpp library
        "YAML_CPP_BUILD_TESTS":"OFF",
        "YAML_CPP_BUILD_TOOLS":"OFF",
        "YAML_CPP_BUILD_CONTRIB":"OFF"
    }
}